---
import BaseHead from '../components/BaseHead.astro';
import GridBackgroundContainer from '../components/HexGridContainer/HexBackgroundContainer.jsx'
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.jsx'
import Header from '../components/Header.astro';
import Hero from '../components/Hero.jsx'
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import "../styles/global.css"
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
    <Nav client:load />
    <main class="text-white min-h-screen">
      <slot />
    </main>
    <GridBackgroundContainer client:load hexSize='700px' lightOutside="#3df03a" hexBrightness="15%" width="w-full">
    </GridBackgroundContainer>
      
	</body>
</html>


