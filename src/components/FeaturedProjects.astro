---
import { getCollection } from 'astro:content';
import ProjectCard from "./ProjectCard.astro";
import CardLayoutGrid from '../layouts/CardLayoutGrid.astro';
const projects = (await getCollection('projects'));
---
<div class="flex flex-col my-14 text-white justify-center place-items-center w-full">
  <div class="flex flex-col w-full justify-center place-items-center ">
    <p class="text-5xl blackOutline">PROJECTS</p>
    <div class="w-1/6 border-2 my-3 backOutline rounded-full border-primary"></div>
    <div class="grid grid-cols-1 xl:grid-cols-2 my-10 place-content-center w-10/12 gap-10 grow">
      {projects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          technologiesArr={project.data.tags}
          weblink={`/projects/${project.id}`}
          githubLink={project.data.githubLink}
          youtubeLink={project.data.youtubeLink}
          img={project.data.image}
        />
      ))}
    </div>
  </div>
</div>
