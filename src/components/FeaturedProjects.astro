---
import { getCollection } from 'astro:content';
import ProjectCard from "./ProjectCard.astro";
import CardLayoutGrid from '../layouts/CardLayoutGrid.astro';
const projects = (await getCollection('projects')).filter((project) => {
  return project.data.isFeatured == true;
})
---

<CardLayoutGrid title="My Projects" buttonTitle="See All" buttonLink="/projects">
      {projects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          technologiesArr={project.data.tags}
          weblink={`/projects/${project.id}`}
          githubLink={project.data.githubLink}
          youtubeLink={project.data.youtubeLink}
          img={project.data.image}
        />
      ))}
</CardLayoutGrid>
